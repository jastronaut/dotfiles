#!/usr/bin/env sh

# bar settings
yabai -m config status_bar                   off

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          off
yabai -m config window_topmost               off
yabai -m config window_opacity               off
yabai -m config window_shadow                on
yabai -m config window_border                off
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  15
yabai -m config bottom_padding               15
yabai -m config left_padding                 15
yabai -m config right_padding                15
yabai -m config window_gap                   10

# rules
yabai -m rule --add app="^Books$" manage=off border=off sticky=off topmost=off
yabai -m rule --add title="^Messages$" manage=off border=off
yabai -m rule --add app="^Preview$" manage=off border=off
yabai -m rule --add title="^App Store$" manage=off border=off
yabai -m rule --add title="^Developer Tools(.)+$" manage=off
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add app="^Mail$" manage=off border=off
yabai -m rule --add app="^Reminders$" manage=off border=off
yabai -m rule --add app="^Simulator$" manage=off border=off
yabai -m rule --add app="^Zoom$" manage=off
yabai -m rule --add app="^Safari$" title="^(General|Tabs|Autofill|Passwords|Search|Security|Privacy|Websites|Extensions|Advanced)$" manage=off border=off
yabai -m rule --add app="^Finder$" title="^Trash$" manage=off border=off
yabai -m rule --add title="^Archive Utility$" manage=off border=off
yabai -m rule --add app="^Rocket$" manage=off border=off

yabai -m rule --add app="^Creative Cloud$" manage=off border=off
yabai -m rule --add app="^Pritunl$" manage=off border=off

echo "yabai configuration loaded.."
